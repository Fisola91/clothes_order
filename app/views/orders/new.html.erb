<div class="cart-container">
  <h2>Shopping Cart</h2>
  <% if @product.orders.length == 0  %>
  <div class="cart-empty">
    <p>Your cart is currently empty</p>
    <div class="start-shopping">
    <%= link_to "/" do %>
        <i class="bi bi-arrow-left"></i>
        <span>Start shopping</span>
    <% end %>
    </div>
  </div>
  <% end %>


</div>
